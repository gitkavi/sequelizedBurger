<div class="jumbotron">
    <div class="text-center">
        <img src="/assets/img/hamburger.png">
    </div>
    <div>
        <h1 class="text-center">Eat-Da-Burger!</h1>
    </div>
</div>
<div class="container">
    <div class="col-lg-3"></div>
    <div class="col-xs-6 col-lg-3">
        <h3>Burger List</h3>
        {{#each burgers}} 
            {{#unless this.devoured}}
                <p >{{this.id}}. {{this.burger_name}}
                    <input type="text" id ="customer_name" placeholder="customer Name">
                    <button class="devour-it btn" data-id="{{this.id}}">Devour it!
                    </button>
                </p> 
            {{/unless}} 
        {{/each}}
    </div>
    <div class="col-xs-6 col-lg-3" >
        <h3>Devoured Burger List</h3>
        {{#each burgers}} 
            {{#if this.devoured}} 
                <p class="devoured_list">{{this.id}}. {{this.burger_name}} (Eaten By {{this.Customer.name}})</p>
            {{/if}} 
        {{/each}}
    </div>
    <div class="col-lg-3"></div>

</div>
<div class="text-center ">
    <h2>Create a Burger</h2>
    <form class="create-form">
        <div class="form-group ">
            {{!-- <label for="burger ">Burger Name:</label> --}}
            <textarea type="text" id="burgerName" name="burger" placeholder="Enter burger name"></textarea>
        </div>
        <button type="submit " id="submit " class="btn btn-lg btn-danger ">Save Burger!</button>
    </form>
</div>